<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LinearLayout1">

    <LinearLayout
        android:layout_width="377dp"
        android:layout_height="703dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.323">

        <Button
            android:id="@+id/button2"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="59dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="0"
            android:background="@drawable/home"
            android:backgroundTint="#1C1919"
            android:text="Button"
            tools:ignore="TouchTargetSizeCheck" />

        <SearchView
            android:id="@+id/searchvw1"
            android:layout_width="340dp"
            android:layout_height="60dp"
            android:layout_marginStart="-60dp"
            android:layout_marginTop="250dp"
            android:layout_weight="0">

        </SearchView>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:layout_marginStart="-270dp"
            android:layout_marginTop="150dp"
            android:layout_weight="0"
            android:contentDescription="just some text"
            app:srcCompat="@drawable/google_5968863" />

        <Button
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="-50dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="0"
            android:background="@drawable/acc"
            android:backgroundTint="#1C1919"
            android:text="Button"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button4"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="0"
            android:background="@drawable/menu"
            android:backgroundTint="#1C1919"
            android:text="Button"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/button5"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_marginStart="-85dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="0"
            android:background="@drawable/stop"
            android:backgroundTint="#1C1919"
            android:text="Button"
            tools:ignore="TouchTargetSizeCheck" />

          <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="79dp"
            android:layout_marginStart="-260dp"
            android:layout_marginTop="330dp"
            android:clickable="true"
            android:contentDescription="just text"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/news1"

                />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>